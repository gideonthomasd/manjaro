[module/myweather]
type = custom/script
interval = 900s
exec = ~/.config/spectrwm/polybar/dwmweather.sh
format-foreground = #99ccff
click-left = lxterminal -e 'curl wttr.in/Caerphilly && read'
click-right = notify-send "Weather" "$(curl wttr.in/Caerphilly?format=3)"
format-background = #4C566A
;${color.background}
label-background = #4C566A

[module/moc]
